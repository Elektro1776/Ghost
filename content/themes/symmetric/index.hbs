		<!-- end: .carousel -->
		<!-- start: .left-content -->

		<div class="section articles row ">

			<div class="col-lg-12 col-sm-12 col-xs-12">
			{{#foreach posts limit="7" columns="2"}}
                {{#if @first}}
				<div class="container">
					<div class="row">

                        <article class=" {{post_class}} col-lg-8 col-md-8 col-sm-12 col-xs-12"  style="height:auto;">
                            <header>
                                <div class="row">

                                {{#if image}}
                                    <a href="{{url}}" class="thumb hover-effect">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="background:url({{image}}); background-size:cover; background-repeat: no-repeat; position:static;">
                                        </div>
                                    </a>
                                {{else}}
                                    {{content words="0"}}
                                {{/if}}
                                </div>
                            </header>
                        </article>
					    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">

                            <div id="subscribe" class=" " style="background-color:#a6499b;">
                                {{#if @labs.subscribers}}
                                <div class="gh-subscribe">
                                    <h2 class="gh-subscribe-title" style="color: #FFF;margin-bottom: 30px;font-size: 38px; font-family:Playfair Display;"> Join our Family</h2>
                                    <p id="sub_share">Share Your Photos, Videos, and Stories with Millions of People From Planet Earth</p>
                                    {{>subscribe_form}}
                                </div>
                                {{/if}}
                            </div>

					    </div>
                        <div class="col-lg-6 col-md-6  ">

                            <span id="overlay_text" class="" style="position: relative; top: 220px;right:600px; z-index: 3;">
                                <h1 class="title" style="line-height:36px;"><a href="{{url}}"  style="color:#fff; ">{{{title}}}</a></h1>
                            </span>
                        </div>

                    </div>
                    <div class="clear"></div>

					<!--	<a href="javascript:void(0)" class="button dark share-button"><i class="fa fa-share-alt"></i> SHARE</a>
						<div class="tip-content">
							<div class="share">
								<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
							onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
								<a class="twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
							onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
								<a class="googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}"
							 onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i></a>
							</div>
						</div> -->

                </div>
            </div>
            <div class="col-md-8">
                {{else}}
					<article class=" {{post_class}} {{#if @rowStart}} col-sm-6 col-xs-6{{/if}} {{#if @rowEnd}}  col-sm-6 col-xs-6{{/if}}" style="height:auto;">
						<header>
							{{#if image}}
								<a href="{{url}}" class="thumb hover-effect">
									<img src="{{image}}" style="">
								</a>
							{{else}}
								{{content words="0"}}
							{{/if}}
                            <div class="clear"></div>

							<div class="meta">
								<div class="alignleft">

									<h2 class="title" ><a href="{{url}}">{{{title}}}</a></h2>
									<time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i>{{date published_at timeago="true"}}</time>
								</div>
								<div class="clear"></div>
							</div>
						</header>
						<div class="post-excerpt" style="line-height:22px; color:#282828; font-weight:500;">
							{{excerpt words="20"}}...
							<a href="{{url}}" class="continue_reading" style="opactiy: .5;">Continue Reading</a>
							<i class="fa fa-angle-double-right"></i>
							<div class="clear"></div>
						</div>
					<!--	<a href="javascript:void(0)" class="button dark share-button"><i class="fa fa-share-alt"></i> SHARE</a>
						<div class="tip-content">
							<div class="share">
								<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
							onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
								<a class="twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
							onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
								<a class="googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}"
						   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i></a>
							</div>
						</div> -->
						{{/if}}
					</article>

				{{else}}

					{{> default-article}}


			{{/foreach}}
            </div>
            <div class="col-md-4">
                <div class="ad-wrapper" style="margin-top: 0;">
                    <div id="ad_4" class="">
                        <a href="" class="ads" target="_blank"><img src="{{asset "images/ad_2-300x250.png"}}" ></a>
                    </div>
                </div>
            </div>
        </div>




	<!-- end: .center -->


</main>
</div>
