{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<!-- start: #single -->
<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">

<main id="single" class="main " role="main">


	{{#post}}
	<!-- start: .meta -->
	<div class="meta col-lg-12 col-md-12 col-xs-12">

			<h1 class="title" id="post_title" style="font-family:Playfair Display;">{{title}}</h1>
			<div class="dropdown" style="margin-left: 0px;">
						<button id="follow-button" class="btn" style="margin-bottom:10px;">Follow</button>

							<ul class="dropdown-menu header-socials" style="border:none; background:none;box-shadow:none; ">
								<li class="facebook"><a href="http://facebook.com/heartcenteredrebalancing" style="border:none;">
									<i class="fa fa-facebook"></i></a></li>

								<li class="instagram"><a href="http://instagram.com/heartcenteredrebalancing" style="border:none;">
									<i class="fa fa-instagram"></i></a></li>
							</ul>
			</div>
			<div class="row">

                {{#if tags}}
                <div class="tags">
                    {{tags separator=""}}
                </div>
                {{/if}}
                <time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
                <a href="#comments" class="comments"><i class="fa fa-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{@blog.url}}{{url}}">0</span></a>
            </div>


    </div>
    <div class="clear">

    </div>
    {{#if image}}
        {{^has tag="no cover"}}

                <div class="main-image cover">
									<img src="{{image}}"  height="400" width="620" alt="" />
                    <div class="center grid-container">
                        <div class="boxed cover" style="background: url({{image}});"></div>
                        <div class="boxed overlay"></div>
                    </div>
                </div>
								<div class="addthis_sharing_toolbox ">

								</div>


        {{/has}}
    {{/if}}


    <div class="clear">

    </div>
    <div class="container">


		<!-- start: .center -->
		<div class="center content section grid-container {{#has tag="no cover"}}no-cover{{/has}}">

				<!-- start: .content -->
				<div class="row">

					<article class="{{post_class}}">


						{{#has tag="no cover"}}
							<header>
								<!-- start: .meta -->
								<div class="meta">
									{{#if tags}}
										<div class="tags">
											{{tags separator=""}}
										</div>
									{{/if}}
									<time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
									<a href="#comments" class="comments alignright"><i class="fa fa-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{@blog.url}}{{url}}">0</span></a>
								</div>
								<!-- end: .meta -->
								<div class="clear"></div>
								<h2 class="title">{{title}}</h2>
								<div class="post-format">
									{{#if image}}
										<div class="main-image"><img src="{{image}}"></div>
									{{/if}}
								</div>

							</header>
						{{/has}}
						<section class="post-content col-lg-12 col-md-8 col-sm-8 col-xs-12">
							<section class="widget widget_text col-lg-6 col-md-6 col-sm-8 xs-6">
								<div id="ad_4" class="">
									<a href="" class="ads" target="_blank"><img src="{{asset "images/ad_2-300x250.png"}}" ></a>
								</div>
							</section>
								<div class="row">
							        <div class="text">{{content}}</div>
						    </div>

              </section>
					</article>
				</div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="clear"></div>
				<!-- end: .content -->



    {{/post}}


    {{>sidebar-featured}}

		<!-- end: .center -->


</main>
<!-- end: #single -->
</div>
<div class="hidden-xs col-lg-4 col-sm-4 pull-right">
	<div class="ad-wrapper ">
		<div id="ad_4" >
			<a href="" class="ads" target="_blank"><img src="{{asset "images/ad_2-300x250.png"}}" ></a>
		</div>
	</div>
</div>
<div class="clear">

</div>
<div class="row">

	<div class="col-lg-8 col-sm-8">
		<section class="related grid-container grid-parent">
			<h3 class="title bordered">RELATED POSTS</h3>
			{{>related_posts}}
		</section>
	</div>
</div>
