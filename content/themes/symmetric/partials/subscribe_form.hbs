<form method="post" action="{{action}}" class="{{form_class}}">
    {{! This is required for the form to work correctly }}
    {{hidden}}
  <div class="">
    <div class="form-group{{#if error}} error{{/if}}" style="margin-left:50px;">
        {{input_email class=input_class placeholder="Your email address" value=email autofocus=autofocus}}
    </div>
  </div>
  <div class="container">

    <button class="{{button_class}} btn" type="submit" style="margin-left:70px; margin-top:123px;">Subscribe</button>
  </div>
    {{! This is used to get extra info about where this subscriber came from }}
    {{script}}
</form>

{{#if error}}
    <p class="main-error">{{{error.message}}}</p>
{{/if}}
