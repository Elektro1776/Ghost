<aside class="blog-sidebar">
{{#is "post, page"}}
  {{#get "posts" limit="3" filter="id:-{{post.id}}" include="author"}}
    {{> "trending_Sidebar" sidebarTitle="Featured Posts" trending_Posts=posts}}
    {{log trending-sidebar}}
  {{/get}}
{{else}}
  {{#get "posts" limit="3" filter="id:-[{{posts[*].id}}]" include="author"}}
    {{> "trending_Sidebar" sidebarTitle="Featured Posts" trending_Posts=posts}}
  {{/get}}
{{/is}}
</aside>
